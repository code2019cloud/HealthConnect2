<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/hosp_logo"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FirstName"
            android:textColor="#3CBC3F"></TextView>

        <EditText
            android:id="@+id/signup_fname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LastName"
            android:textColor="#3CBC3F"></TextView>

        <EditText
            android:id="@+id/signup_lname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"></EditText>

        <RadioGroup
            android:id="@+id/signup_radio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="#3CBC3F"></RadioButton>

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="#3CBC3F"></RadioButton>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of birth"
            android:textColor="#3CBC3F"></TextView>

        <EditText
            android:id="@+id/signup_dob"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="House Name/House Number"
            android:textColor="#3CBC3F"></TextView>

        <EditText
            android:id="@+id/signup_housename"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StreetName/Locality"
            android:textColor="#3CBC3F"></TextView>

        <EditText
            android:id="@+id/signup_streetname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>

        <Spinner
            android:id="@+id/signup_spinner1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:entries="@array/dst_arrays"
            android:prompt="@array/dst_arrays"></Spinner>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pincode"
            android:textColor="#3CBC3F"></TextView>

        <EditText
            android:id="@+id/signup_pincode"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#3CBC3F"></TextView>

        <EditText
            android:id="@+id/signup_email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number"
            android:textColor="#3CBC3F"></TextView>

        <EditText
            android:id="@+id/signup_phoneno"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter a password"
            android:textColor="#3CBC3F"></TextView>

        <EditText
            android:id="@+id/signup_pass"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dependent  Name"
            android:textColor="#3CBC3F"></TextView>

        <EditText
            android:id="@+id/signup_depname1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/btnadddep1"
            android:background="@drawable/plus_icon"
            android:onClick="addDependOnClick"></Button>

        <EditText
            android:id="@+id/signup_depname2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>
        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/btnadddep2"
            android:background="@drawable/plus_icon"
            android:onClick="addDependOnClick"></Button>
        <EditText
            android:id="@+id/signup_depname3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>
        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/btnadddep3"
            android:background="@drawable/plus_icon"
            android:onClick="addDependOnClick"></Button>

        <EditText
            android:id="@+id/signup_depname4"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></EditText>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="130dp"
            android:onClick="patientSignupSubmit"
            android:src="@drawable/patient_submit"></ImageView>
    </LinearLayout>
</ScrollView>