<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/hosp_logo"></ImageView>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:entries="@array/dst_arrays"
        android:prompt="@array/dst_arrays"></Spinner>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="#3CBC3F"
                android:text="ABC HOSPITAL , THRUVANANTHAPURAM  1"></TextView>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:onClick="hospitalLinkClick"
                android:text="HOSPITALS"></Button>

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:onClick="specialitiesLinkClick"
                android:text="SPECIALITIES"></Button>

            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:backgroundTint="@android:color/holo_green_light"
                android:onClick="doctorLinkClick"
                android:text="DOCTORS"></Button>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="#3CBC3F"
                android:text="GastroEntrology "
                android:onClick="patientSelectDept">
            </TextView>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="#3CBC3F"
                android:text="Ophthalmology">
            </TextView>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:src="@drawable/home_icon"
            android:onClick="patientHomeClick"></ImageView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:src="@drawable/search_icon"
            android:onClick="patientSearchClick"></ImageView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:src="@drawable/profile_icon"
            android:onClick="patientProfileClick"></ImageView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:src="@drawable/history3_icon"></ImageView>
    </LinearLayout>

</LinearLayout>


